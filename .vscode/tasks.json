{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-arch", "x86_64",
                "-std=c++17",
                "-Wall",
                "-framework", "Cocoa",
                "-framework", "Quartz",
                "-framework", "OpenGL",
                "-lcocoawindowing_s",
                "-lpng",
                "-L", "olcPixelGameEngine/bin",
                "-I", "olcPixelGameEngine/include",
                "${file}",
                "-o", "${relativeFileDirname}/${fileBasenameNoExtension}"
            ]
        },
        {
            "label": "run",
            "dependsOn": ["build"],
            "type": "process",
            "command": "./${relativeFileDirname}/${fileBasenameNoExtension}"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm ${relativeFileDirname}/${fileBasenameNoExtension}"
        },
        {
            "label": "default",
            "dependsOrder": "sequence",
            "dependsOn": ["run", "clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}