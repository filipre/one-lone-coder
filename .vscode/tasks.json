{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-arch",
                "x86_64",
                "-std=c++17",
                "-Wall",
                "-framework",
                "OpenGL",
                "-framework",
                "GLUT",
                "-lpng",
                "${file}",
                "-o",
                "./${relativeFileDirname}/${fileBasenameNoExtension}"           
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "â–º run",
            "dependsOn": [
                "build"
            ],
            "type": "process",
            "command": "./${relativeFileDirname}/${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm ${relativeFileDirname}/${fileBasenameNoExtension}",
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}