{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++ -arch x86_64 -std=c++14 -Wall -framework Cocoa -framework Quartz -framework OpenGL -lcocoawindowing_s -lpng -L olcPixelGameEngine/bin -I olcPixelGameEngine/include ${file} -o ${fileBasenameNoExtension}",
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm ${fileBasenameNoExtension}"
        },
        {
            "label": "default",
            "type": "shell",
            "command": "echo 'Done'",
            "dependsOrder": "sequence",
            "dependsOn": ["build", "run", "clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}