{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-arch",
                "x86_64",
                "-std=c++17",
                "-Wall",
                "-framework",
                "Cocoa",
                "-framework",
                "Quartz",
                "-framework",
                "OpenGL",
                "-lcocoawindowing_s",
                "-lpng",
                "-L",
                "olcPixelGameEngine/bin",
                "-I",
                "olcPixelGameEngine/include",
                "${file}",
                "-o",
                "${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "â–º run",
            "dependsOn": [
                "build"
            ],
            "type": "process",
            "command": "./${relativeFileDirname}/${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm ${relativeFileDirname}/${fileBasenameNoExtension}"
        }
    ]
}